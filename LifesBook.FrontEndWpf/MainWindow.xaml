<Window x:Class="LifesBook.FrontEndWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Life's Book" Height="748" Width="1380"
        ResizeMode="NoResize"
        WindowStyle="None" >
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/back.jpg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.75*" />
            <ColumnDefinition Width="0.25*" />
            <!-- Right list -->
        </Grid.ColumnDefinitions>

        <!-- Left: writable multiline TextBox -->

        <Border Grid.Column="0" OpacityMask="#FF7D6767">
            <StackPanel Margin="0,10,0,0">
                <Label x:Name="TitleLabel" Content="Hisoria 25/8552/20" HorizontalAlignment="Center" FontFamily="Freestyle Script" FontSize="36" Width="500" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="#FFF7F7F7" FontWeight="Bold" Opacity="0.9">
                    <Label.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="#FF6A865D" Offset="1"/>
                        </LinearGradientBrush>
                    </Label.Background>
                </Label>
                <TextBox x:Name="InputTextBox"
          AcceptsReturn="True"
          Validation.ErrorTemplate="{x:Null}"
          VerticalScrollBarVisibility="Auto"
          HorizontalScrollBarVisibility="Auto"
          TextWrapping="Wrap"
          FontSize="36"
          Text="Muy buenas este es el menaje d d epal jajajajja.  lkasd" 
          FontFamily="Freestyle Script" Margin="0,1,0,-1" BorderThickness="2,2,2,2" Height="613" BorderBrush="{x:Null}" Width="919" Opacity="0.9" AcceptsTab="True" Foreground="White" ScrollViewer.CanContentScroll="True">
                    <TextBox.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" Opacity="0.995">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="#FF3C4631" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBox.Background>
                    <TextBox.OpacityMask>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="#FF794F4F" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBox.OpacityMask>
                </TextBox>

            </StackPanel>


        </Border>

        <!-- Splitter -->

        <!-- Right: list of strings + buttons -->
        <Border Grid.Column="3" Padding="8" Margin="1,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="37*" />
                    <RowDefinition Height="58*"/>
                    <!-- List -->
                    <RowDefinition Height="Auto" />
                    <!-- Buttons -->
                </Grid.RowDefinitions>

                <!-- List -->
                <StackPanel Grid.Row="0" Grid.RowSpan="2" Margin="0,0,0,30">
                    <Label Content="Histories" Foreground="#FFF7F7F7" FontWeight="Bold" Opacity="0.9" HorizontalAlignment="Center" FontFamily="Freestyle Script" FontSize="36" Width="233" Height="54" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                        <Label.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Black"/>
                                <GradientStop Color="#FF6A865D" Offset="1"/>
                            </LinearGradientBrush>
                        </Label.Background>
                    </Label>
                    <ListBox x:Name="HistoyListBox"
                             HorizontalContentAlignment="Stretch"                           
                             Height="609" MouseDoubleClick="HistoyListBox_MouseDoubleClick" FontFamily="Freestyle Script" FontSize="36" ScrollViewer.CanContentScroll="True" RenderTransformOrigin="0.532,0.682" Margin="0,5,0,0" Opacity="0.89" Foreground="White" FontWeight="Bold">
                        <ListBox.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Black"/>
                                <GradientStop Color="#FF6A865D" Offset="1"/>
                            </LinearGradientBrush>
                        </ListBox.Background>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Date, StringFormat={}{0:dddd dd MMMM 'of' yyyy}}"
                       FontSize="32"
                       Padding="4"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Grid.Row="2" Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button x:Name="CloseButton"
                            Content="Close"
                           Height="30"
Width="90" Click="CloseButton_Click" Opacity="0.905" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,20,0">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FF9A3F15"/>
                                <GradientStop Color="White" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                    <Button x:Name="NewButton"
                            Content="New"
                            Height="30"
                            Width="90"
                             Click="NewButton_Click" Opacity="0.9" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,20,0">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="Black"/>
                                <GradientStop Color="#FF5BEC47" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                
                  
                    <Button x:Name="SaveButton"
                            Content="Save"
                           Height="30"
Width="90" Click="SaveButton_Click" Opacity="0.905" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,5,0" >
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFA1D051"/>
                                <GradientStop Color="White" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
